{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": false,
    "target": "es6",
    "types": [
      "jest",
      "jest-enzyme"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
