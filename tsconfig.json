{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "sourceMap": true,
        "strict": false,
        "target": "es6",
        "types": [
            "jest",
            "jest-enzyme"
        ],
        "baseUrl": "./",
        "paths": {
            "@evernest/dev-helpers": [
                "./utils/dev-helpers/src"
            ],
            "@evernest/icons": [
                "./ions/icons/src"
            ],
            "@evernest/theme": [
                "./atomic-design/ions/theme/src"
            ],
            "@evernest/normalize-css": [
                "./atomic-design/ions/normalize-css/src"
            ],
            "@evernest/tokens": [
                "./atomic-design/ions/tokens/src"
            ],
            "@evernest/button": [
                "./atoms/button/src"
            ],
            "@evernest/evernest-logo": [
                "./atomic-design/atoms/evernest-logo/src"
            ],
            "@evernest/icon": [
                "./atomic-design/atoms/icon/src"
            ],
            "@evernest/footer-link": [
                "./atomic-design/atoms/footer-link/src"
            ],
            "@evernest/header-link": [
                "./atomic-design/atoms/header-link/src"
            ],
            "@evernest/typography": [
                "./atomic-design/atoms/typography/src"
            ],
            "@evernest/menu": [
                "./molecules/menu/src"
            ],
            "@evernest/panel": [
                "./atomic-design/molecules/panel/src"
            ],
            "@evernest/footer": [
                "./organisms/footer/src"
            ],
            "@evernest/header": [
                "./atomic-design/organisms/header/src"
            ],
            "@evernest/grid": [
                "./layout/grid/src"
            ],
            "@evernest/page": [
                "./atomic-design/layout/page/src"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}