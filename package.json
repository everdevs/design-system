{
	"name": "design-system",
	"version": "0.0.1",
	"private": true,
	"author": {
		"name": "Gregor Adams",
		"email": "gregor.adams@evernest.com"
	},
	"workspaces": [
		"atoms/*",
		"ions/*",
    "layout/*",
    "molecules/*",
		"organisms/*",
		"utils/*"
	],
	"scripts": {
		"add-component": "babel-node bin/add-component.ts --extensions='.ts'",
		"bootstrap": "lerna bootstrap",
		"prebuild": "yarn clean && yarn setup",
		"build": "lerna run build --stream",
		"prebuild:storybook": "yarn test:generate-output",
		"build:storybook": "build-storybook -c .storybook -o storybook-static/",
		"clean": "lerna run clean",
		"predeploy": "yarn build:storybook",
		"deploy": "gh-pages -d storybook-static/",
		"predev": "yarn setup",
		"dev": "yarn storybook",
		"lint": "yarn stylelint",
		"ncu": "ncu -u; yarn lerna exec 'ncu -u -x \"/^@evernest/.*$/\"'",
		"prettier": "prettier '{atoms,ions,molecules,organisms,utils}/**/*.[jt]s(x)?'",
		"refresh": "rimraf node_modules '**/node_modules' yarn.lock && yarn install",
		"run:bin": "lerna run bin",
		"setup": "yarn run:bin; babel-node init.ts --extensions='.ts'",
		"snapshot": "yarn build:storybook && dotenv percy-storybook --widths=320,640,960,1280",
		"spj": "sort-package-json; lerna exec sort-package-json && prettier '{atoms,ions,molecules,organisms,utils}/**/package.json' --write",
		"prestorybook": "yarn test:generate-output",
		"storybook": "start-storybook -p 3000",
		"stylelint": "stylelint '**/*.{ts,tsx}'",
		"pretest": "yarn setup && yarn lint",
		"test": "jest --coverage",
		"pretest:generate-output": "yarn setup",
		"test:generate-output": "lerna run test:generate-output --parallel",
		"xo": "xo"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"prettier --write"
		]
	},
	"browserslist": [
		"last 2 android versions",
		"last 2 edge versions",
		"last 2 chrome versions",
		"last 2 firefox versions",
		"last 2 ios versions",
		"last 2 safari versions"
	],
