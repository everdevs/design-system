{
  "name": "design-system",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Gregor Adams",
    "email": "gregor.adams@evernest.com"
  },
  "workspaces": [
    "atoms/*",
    "molecules/*",
    "organisms/*",
    "utils/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prebuild": "yarn clean",
    "build": "lerna run build --stream",
    "prebuild:storybook": "yarn test:generate-output",
    "build:storybook": "build-storybook -c .storybook -o build/",
    "clean": "lerna run clean",
    "refresh": "npx rimraf node_modules '**/node_modules' yarn.lock && yarn install",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov",
    "predeploy": "npm run build:storybook",
    "deploy": "gh-pages -d build/",
    "lint": "yarn stylelint",
    "ncu": "npx npm-check-updates -u; yarn lerna exec 'npx npm-check-updates -u -x \"/^@evernest/.*$/\"'",
    "prettier": "prettier '{atoms,molecules,organisms,utils}/**/*.[jt]s(x)?'",
    "spj": "npx sort-package-json; lerna exec npx sort-package-json",
    "prestorybook": "yarn test:generate-output",
    "storybook": "start-storybook -p 3000",
    "stylelint": "stylelint '**/*.{ts,tsx}'",
    "test": "nyc jest",
    "pretest": "yarn lint",
    "test:generate-output": "lerna run test:generate-output --parallel",
    "test:watch": "lerna run test --parallel"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 android versions",
    "last 2 edge versions",
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 ios versions",
    "last 2 safari versions"
  ],
  "dependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@storybook/addon-a11y": "^5.3.19",
    "@storybook/addon-backgrounds": "^5.3.19",
    "@storybook/addon-docs": "^5.3.19",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-jest": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/cli": "^5.3.19",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^5.3.19",
    "@storybook/theming": "^5.3.19",
    "@types/enzyme": "^3.10.5",
    "@types/jasmine": "^3.5.10",
    "@types/jasmine-matchers": "^0.2.32",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "babel-plugin-istanbul": "^6.0.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "gh-pages": "^3.0.0",
    "humanize-string": "^2.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.9",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.15.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "stylelint": "^13.6.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0"
  }
}
