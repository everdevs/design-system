{
	"name": "design-system",
	"version": "0.0.1",
	"private": true,
	"author": {
		"name": "Gregor Adams",
		"email": "gregor.adams@evernest.com"
	},
	"workspaces": [
		"atoms/*",
		"molecules/*",
		"organisms/*",
		"utils/*"
	],
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"prebuild": "yarn clean && node init.js",
		"build": "lerna run build --stream",
		"prebuild:storybook": "yarn test:generate-output",
		"build:storybook": "build-storybook -c .storybook -o build/",
		"clean": "lerna run clean",
		"predeploy": "npm run build:storybook",
		"deploy": "gh-pages -d build/",
		"predev": "node init.js",
		"dev": "start-storybook -p 3000",
		"lint": "yarn stylelint",
		"ncu": "ncu -u; yarn lerna exec 'ncu -u -x \"/^@evernest/.*$/\"'",
		"prettier": "prettier '{atoms,molecules,organisms,utils}/**/*.[jt]s(x)?'",
		"refresh": "rimraf node_modules '**/node_modules' yarn.lock && yarn install",
		"spj": "sort-package-json; lerna exec sort-package-json",
		"prestorybook": "yarn test:generate-output",
		"storybook": "start-storybook -p 3000",
		"stylelint": "stylelint '**/*.{ts,tsx}'",
		"pretest": "node init.js && yarn lint",
		"test": "jest --coverage",
		"pretest:generate-output": "node init.js",
		"test:generate-output": "lerna run test:generate-output --parallel",
		"xo": "xo"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"prettier --write"
		]
	},
	"browserslist": [
		"last 2 android versions",
		"last 2 edge versions",
		"last 2 chrome versions",
		"last 2 firefox versions",
		"last 2 ios versions",
		"last 2 safari versions"
	],
	"dependencies": {
		"@babel/core": "^7.10.2",
		"@babel/plugin-transform-runtime": "^7.10.1",
		"@babel/preset-env": "^7.10.2",
		"@babel/preset-react": "^7.10.1",
		"@babel/preset-typescript": "^7.10.1",
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@commitlint/config-lerna-scopes": "^8.3.4",
